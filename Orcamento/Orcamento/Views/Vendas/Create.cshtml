@model Orcamento.Models.Venda

@{
    ViewData["Title"] = "Create"; 
    int CodigoOrcamento = Convert.ToInt32(ViewData["CodigoOrcamento"]);
    var editar = ViewData["Editar"];
    var nome = ViewData["NOME"];
}

<h1>Create</h1>

<h4>Venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CodigoOrcamento" class="control-label"></label>
                <input asp-for="CodigoOrcamento" class="form-control" value="@CodigoOrcamento" readonly />
                <span asp-validation-for="CodigoOrcamento" class="text-danger"></span>
            </div>
            @if (editar.Equals("NOVO"))
            {
                <div class="form-group">
                    <label asp-for="ClienteId" class="control-label"></label>
                    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                </div>
            }
            else
            {


                <div class="form-group"> 
                    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId" hidden></select>
                </div>
                <label  class="control-label">Nome</label>
                <input type ="text"  class="form-control " value= @nome />
            }
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
