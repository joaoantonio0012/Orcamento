@model IEnumerable<Orcamento.Models.Venda>

@{
    ViewData["Title"] = "ListaOrcamento";
    var total = ViewData["Total"];
    int CodigoOrcamento = Convert.ToInt32(ViewData["CodigoOrcamento"]);
}

    <h2>Cliente @Model.ElementAt(0).Cliente.Nome    Total = @total</h2>
    <p>
      <a asp-action="Create" asp-route-id= "@CodigoOrcamento ">Adicionar Produtos</a> |
    </p>
 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>

            <th>
                Valor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>


            <td>
                @Html.DisplayFor(modelItem => item.Produto.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.Valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
